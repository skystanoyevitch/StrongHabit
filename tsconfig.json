{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*.ts", // More specific include for src directory
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "App.tsx", // Explicitly include App.tsx if it's at the root
    "*.ts", // Include other .ts files at the root
    "*.tsx" // Include other .tsx files at the root
  ]
}
